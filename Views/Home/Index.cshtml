@model MyLocalBands.ViewModels.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center col-md-4 offset-md-4">
    <h1 class="display-4">Welcome</h1>
    <p>There are:</p>
    <ul class="list-group  text-white">
        <li class="list-group-item bg-success">Artists: @Model.ArtistsCount</li>
        <li class="list-group-item bg-secondary">Albums: @Model.AlbumsCount</li>
        <li class="list-group-item bg-info">Songs: @Model.SongsCount</li>
    </ul>
</div>

<h2 class="my-5 text-center">Showing @this.Model.RandomAlbums.Count() random albums</h2>
<div class="row">
    @foreach (var album in this.Model.RandomAlbums)
    {
        <div class="col-md-4 text-center">
            <a class="text-dark " asp-controller="Albums" asp-action="ById" asp-route-id="@album.Id">
                <img class="index-img mb-2 card-shadow" src="~/img/albums/@album.ImagePath" alt="@album.Name">
                <div>
                    <h5>@album.Name</h5>
                    <h6>By: @album.ArtistName</h6>
                    <p>Genre: @album.GenreName</p>
                </div>
            </a>
        </div>
    }
</div>
